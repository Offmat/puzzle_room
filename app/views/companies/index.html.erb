<h1>Companies List!</h1>

<ul>
  <% @companies.each do |company| %>
      <div class="inline" style="font-size: 30px">
        <li><%= company.name.capitalize %>
          <%= link_to "Show", company, class: "btn btn-primary btn-sm"%>
          <span style="font-size: 15px">
            <% link_label =  pluralize(company.puzzles.count, 'puzzle') + " in database" %>
            <%= company.country&.name %>
            <%= "|" if company.country %>
            <%= link_to link_label, puzzles_path(q: {company_id: company.id}), class: "text-link" %>
          </span>
        </li>
      </div>
  <% end %>
</ul>

<% if policy(@companies).create?%>
  <%= link_to "Add new company", new_company_path, class: "btn btn-primary" %>
<% else %>
  You have to be <%= link_to "logged in", user_session_path, class: "text-link" %> to add new company
<% end %>
