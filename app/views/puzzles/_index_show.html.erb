<div class="col-md-12 ch-row list-group-item">
  <div class="col-md-1 ch-col-thumb">
    <%= image_tag puzzle.avatar.thumb %>
  </div>
  <div class="col-md-4 ch-col">
    <h2 style="display: inline"><%= puzzle.name %></h2>
    <br>
    <% if puzzle.inventor %>
      Inventor: <b><%= link_to puzzle.inventor.full_name, puzzle.inventor, class: "text-link" %></b>
      <br>
    <% end %>
    Producer: <b><%= link_to puzzle.producer.name, puzzle.producer, class: "text-link" %></b>
    <br>
    Difficulty level: <b><%= puzzle.level %>/6 | </b>
    Rating:
    <% if puzzle.rates.any? %>
      <b><%= (puzzle.rates.inject(0) { |s, n| s + n.rating}/puzzle.rates.length).round(2) %>/10</b>
    <% else %>
      <b>none</b>
    <% end %>
  </div>

  <div class="col-md-7 ch-col">
    <b>Description: </b><%= puzzle.description.truncate_words(30) %>
  </div>
  <div class="bottom-right"><%= link_to "Show", puzzle, class: "btn btn-primary btn-xs"%></div>
</div>
