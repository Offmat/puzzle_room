        <span style="font-size: 15px">
          <% if puzzle.rates.any? %>
            Rating: <%= puzzle.rates.average(:rating)&.round(2) %>/10 |
          <% end %>
          Producer: <%= puzzle.producer.name %>
          <% if puzzle.inventor %>
            | Inventor: <%= puzzle.inventor.full_name %>
          <% end %>
        </span>
      </li>
    </div>
  <% end %>
</div>


<div class="col-md-12 list-group-item ch-row no-border">
  <h3><%= @user.nickname.titleize %> rated <%= pluralize(@user.puzzles.count, 'puzzle') %>:</h3>
  <% @user.puzzles.each do |puzzle| %>
    <div class="inline" style="font-size: 20px">
      <li>
        <%= puzzle.name %>
        <%= link_to "Show", puzzle, class: "btn btn-primary btn-xs"%>
        <span style="font-size: 15px">
          Average rating: <%= puzzle.rates.average(:rating)&.round(2) %>/10 |
          <%= @user.nickname.titleize %> rate: <%= puzzle.rates.where(user: @user).first.rating %>/10 |
          Producer: <%= puzzle.producer.name %>
          <% if puzzle.inventor %>
            | Inventor: <%= puzzle.inventor.full_name %>
          <% end %>
        </span>
      </li>
    </div>
  <% end %>
</div>
