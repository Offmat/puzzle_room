<div class="text-center">
  <h2>Sign up</h2>
</div>
<div class="row justify-content-md-center">
  <div class="col-md-6 light-border">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control obligatory", autofocus: true, placeholder: "Obligatory field" %>
        <%= render 'common/errors', object: @user, field_name: :email %>
      </p>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </p>
      <p>
        <%= f.label :surname %>
        <%= f.text_field :surname, class: "form-control" %>
      </p>
      <p>
        <%= f.label :nickname %><em> (Your post will be signed with this name) </em>
        <%= f.text_field :nickname, class: "form-control", placeholder: "Full name or email will be used if left empty" %>
      </p>
      <p>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, class: "form-control obligatory", autocomplete: "off", placeholder: "Obligatory field" %>
        <%= render 'common/errors', object: @user, field_name: :password %>
      </p>
      <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control obligatory", autocomplete: "off", placeholder: "Obligatory field" %>
        <%= render 'common/errors', object: @user, field_name: :password_confirmation %>
      </p>
      <p>
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
